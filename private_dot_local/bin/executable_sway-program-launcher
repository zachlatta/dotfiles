#!/usr/bin/env ruby

require 'set'

# bemenu with arbitrary programs... should document the colors at some
# point, i had to fiddle to get it to look like dmenu (it's still not
# amazing though...)
program_selection = `dmenu_path | bemenu -i \
    --tb '#005577' \
    --fb '#222222' \
    --nb '#222222' \
    --scb '#222222' \
    --sb '#005577' \
    --hb '#005577' \
    --tf '#eeeeee' \
    --sf '#eeeeee' \
    --sb '#005577' \
    --hf '#bbbbbb' \
    --fn 'DejaVu Sans Mono 10' \
    --prompt 'Run:'`.strip

# append given arguments to the following apps
launch_options = {
  "spotify": ["--force-device-scale-factor=2"] # for hidpi
}

opts = launch_options[program_selection.to_sym]
opts ||= []

# apps to set a larger cursor for. it's a hacky solution, but is the
# only way i can figure out how to get a normal sized cursor in emacs
# and slack
x_apps_for_big_cursor = [
  "emacs",
  "slack",
  "spotify",
]

prefix = ""

# if the program selection is in the x_apps_for_big_cursor array, then
# manually set a larger cursor
if x_apps_for_big_cursor.include? program_selection
  prefix = "XCURSOR_SIZE=48 "
end

exec(prefix + program_selection + " " + opts.join(' '))
