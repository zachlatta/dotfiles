#!/usr/bin/env bash

action=$(echo -e "suspend\nlock\nlogout\nshutdown\nreboot" | wofi -d -p "power:" -L 5)

if [[ "$action" == "lock" ]]
then
  swaylock
fi

if [[ "$action" == "suspend" ]]
then
  systemctl suspend && swaylock
fi

if [[ "$action" == "logout" ]]
then
  swaymsg exit
fi

if [[ "$action" == "shutdown" ]]
then
  shutdown now
fi

if [[ "$action" == "reboot" ]]
then
  reboot
fi
